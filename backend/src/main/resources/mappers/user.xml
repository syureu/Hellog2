<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.pjt1track3.user.UserRepository">

    <select id="findByUsername" parameterType="String" resultType="User">
        select *
        from user
        where username=#{username}
    </select>

    <insert id="insertUser" parameterType="com.ssafy.pjt1track3.user.User" >
        insert into user(
        username,
        password,
        name,
        age,
        phone,
        male,
        sign_up_day,
        height,
        weight,
        gym_id,
        active,
        limit_permit_day,
        roles,
        permissions
        ) values (
        #{username},
        #{password},
        #{name},
        #{age},
        #{phone},
        #{male},
        #{signUpDay},
        #{height},
        #{weight},
        #{gymId},
        #{active},
        #{limitPermitDay},
        #{roles},
        #{permissions}
        )
    </insert>

    <select id="selectUser" parameterType="Long" resultType="User">
        select *
        from user
        where id=#{id}
    </select>

    <update id="updateUser" parameterType="User">
        update user
        set
        pw=#{pw},
        name=#{name},
        age=#{age},
        phone=#{phone},
        male=#{male},
        height=#{height},
        weight=#{weight}
        where id=#{id}
    </update>

    <delete id="deleteUser" parameterType="int">
        delete from user
        where id=#{id}
    </delete>

    <delete id="deleteAll">
        delete from user
        where 1=1
    </delete>
</mapper>
