<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.pjt1track3.record.RecordRepository">

    <!-- void insertRecord(Record record); -->
    <insert id="insertRecord" parameterType="Record">
        insert into
            record(
                id,
                equipment_exercise_id,
                sett,
                weight,
                countt,
                start_time,
                end_time
            )
        values(
            #{id},
            #{equipmentExerciseId},
            #{sett},
            #{weight},
            #{countt},
            #{startTime},
            #{endTime}
        )
    </insert>

    <!-- Record selectRecord(Long recordId); -->
    <select id="selectRecord" parameterType="Long" resultType="Record">
        select
            *
        from
            record
        where
            record_id = #{recordId}
    </select>


    <!-- void updateRecord(Record record); -->
    <update id="updateRecord" parameterType="Record">
        update
            record
        set
            id = #{id},
            equipment_exercise_id = #{equipmentExerciseId},
            sett = #{sett},
            weight = #{weight},
            countt = #{countt},
            start_time = #{startTime},
            end_time = #{endTime}
        where
            record_id = #{recordId}
    </update>

</mapper>
